@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@model TheChampions.Models.Registration

@{
    Layout = "_Layout";
}

<h2><b>@localizer["Register"]</b></h2>
<hr />

<form asp-controller="Camp" asp-action="Register" enctype="multipart/form-data"
      method="post" class="mt-3">

    <div class="form-group row">
        <label asp-for="FirstName" class="col-sm-2 col-form-label">@localizer["First Name"]</label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control mb-2" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="LastName" class="col-sm-2 col-form-label">@localizer["Second Name"]</label>
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control mb-2" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label">@localizer["Email"]</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control mb-2" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="age" class="col-sm-2 col-form-label">@localizer["Age"]</label>
        <div class="col-sm-10">
            <input asp-for="age" class="form-control mb-2" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="tel_No" class="col-sm-2 col-form-label">@localizer["Phone Number"]</label>
        <div class="col-sm-10">
            <input asp-for="tel_No" class="form-control mb-2" />
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="activity" class="col-sm-2 col-form-label">@localizer["Activity"]</label>
        <div class="col-sm-10">
            <select asp-for="activity" class="form-control" asp-items="ViewBag.ActivityList">
                <option value=""> @localizer["Please choose one activity you are intersted in"]</option>
            </select>
            <span asp-validation-for="activity" class="text-danger"></span>
        </div>
    </div>


    @*<div class="col-md-10">
    @Html.DropDownList("Batchlist")
    </div>
    </div>*@

    @*<div class="form-group">
    <label asp-for="batch" class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
    <input asp-for="batch" class="form-control mb-2" />
    </div>
    </div>*@


    <div class="form-group row">
        <label asp-for="Fee" class="col-sm-2 col-form-label">@localizer["Fee"]</label>
        <div class="col-sm-10">
            <input asp-for="Fee" class="form-control mb-2" />
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="studentImage" class="col-sm-2 col-form-label mb-2">@localizer["studentImage"]</label>
        <div class="col-sm-10">
            <input asp-for="studentImage" class="form-control">
        </div>
    </div>

    @*<div class="form-group">
        <input type="submit" value=@localizer["Register"] class="btn btn-primary bm-2" />
    </div>*@

    <div class="row mt-1">
        <div class="col-md-1">
            <div class="form-group">
                <input type="submit" value=@localizer["Register"] class="btn btn-primary w-7" />
            </div>
        </div>
        <div class="col-md-3">
            <div>
                <a asp-action="Index" asp-controller="Home" class="btn btn-secondary w-10"> @localizer["Back to Home"]</a>
            </div>
        </div>
    </div>
    <div class="row mt-1">
        <div class="col-md-3">
        <div>
            <a asp-action="payment" asp-controller="Payment" class="btn btn-secondary w-10"> Pay Now</a>
        </div>
        </div>
    </div>
</form>




