@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@model TheChampions.Models.Transaction

@{
    ViewData["Title"] = @localizer["Transaction"];
}

<@*h1>Create</h1>

<h4>Transaction</h4>
<hr />*@

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>@localizer["Transaction"]</h1>
        
        <form asp-action="CreateOrEdit" autocomplete="on">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransactionId" />
            <input type="hidden" asp-for="Date" />
            <div class="form-group">
                <label asp-for="AccountNumber" class="control-label">@localizer["Account Number"]</label>
                <input asp-for="AccountNumber" class="form-control" />
                <span asp-validation-for="AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BeneficiaryName" class="control-label">@localizer["Beneficiary Name"]</label>
                <input asp-for="BeneficiaryName" class="form-control" />
                <span asp-validation-for="BeneficiaryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BankName" class="control-label">@localizer["Bank Name"]</label>
                <input asp-for="BankName" class="form-control" />
                <span asp-validation-for="BankName" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SwiftCode" class="control-label">@localizer["Swift Code"]</label>
                        <input asp-for="SwiftCode" class="form-control" />
                        <span asp-validation-for="SwiftCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="amount" class="control-label">@localizer["Amount"]</label>
                        <input asp-for="amount" class="form-control" />
                        <span asp-validation-for="amount" class="text-danger"></span>
                    </div>
                </div>

            </div>
            
            
           
            <div class="row mt-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value=@localizer["Submit"] class="btn btn-primary w-100" />
                    </div>
                </div>
                    <div class="col-md-6">
                        <div>
                             <a asp-action="Index" class="btn btn-secondary w-100"> @localizer["View All"]</a>
                        </div>
                    </div>
              </div>

        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
