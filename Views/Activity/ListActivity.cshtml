@model List<Activity>

@{
    Layout = "_Layout";
    //var plist = ViewBag.products;
}

<div class="container">
    <h4 class="display-4">Activities</h4>
    <div class="row">
        @foreach (var c in @Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm" style="width: 18rem;">

                    <div class="card-body">
                        <h2 class="card-title">@c.activityname </h2>
                        

                        @*<div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                    <a href="/product/getproductbyid/@p.productId" class="btn btn-sm btn-outline-secondary">View Detail</a>
                    </div>
                    <small class="text-muted">Item Unique Name</small>
                    </div>*@
                        <div class="card-footer text-center" >

                            <a asp-action="GetActivitybyid" asp-controller="Activity" asp-route-id="@c.activityid" class="btn btn-sm btn-outline-secondary">View Detail</a>
                           
                            @*edit*@
                            <a asp-action="Edit" asp-controller="Activity" asp-route-id="@c.activityid" class="btn btn-warning">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>

                            @*delete*@
                            <a asp-action="Delete" asp-controller="Activity" asp-route-id="@c.activityid" >
                            <button type="submit" class="btn btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this record?')">
                                <i class="far fa-trash-alt"></i>
                            </button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
