@model TheChampions.Models.Activity

@{
    Layout = "_Layout";
}

<h2>Edit Record</h2>


<form asp-action="Edit" enctype="multipart/form-data" asp-controller="Activity" method="post" class="mt-3">
    <input hidden asp-for="activityid" />
    
    <div class="form-group row">
        <label asp-for="activityname" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="activityname" class="form-control mb-2" />
            <span asp-validation-for="activityname" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-6">
            <input type="submit" value="Update" class="btn btn-primary bm-1" />
            <a asp-controller="Activity" asp-action="ListActivity" class="btn btn-primary bm-1">Cancel</a>
        </div>
    </div>
    
</form>
<div>
    <a asp-action="ListActivity" asp-controller="Activity">Back to List</a>
</div>





